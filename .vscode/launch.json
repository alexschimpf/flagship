{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Admin Server",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": ["app.main:app", "--reload", "--port", "8000", "--log-config", "./admin/config/logger.json"],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/admin"
            }
        },
        {
            "name": "Flags Server",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": ["app.main:app", "--reload", "--port", "8001", "--log-config", "./flags/config/logger.json"],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/flags"
            }
        },
        {
            "name": "Admin Server Debugger",
            "type": "debugpy",
            "request": "attach",
            "connect":{
                "host": "0.0.0.0",
                "port": 5678
            },
            "pathMappings":[{
                "localRoot": "${workspaceFolder}/admin",
                "remoteRoot": "/admin"
            }]
        },
        {
            "name": "Flags Server Debugger",
            "type": "debugpy",
            "request": "attach",
            "connect":{
                "host": "0.0.0.0",
                "port": 5679
            },
            "pathMappings":[{
                "localRoot": "${workspaceFolder}/flags",
                "remoteRoot": "/flags"
            }]
        }
    ],
    "compounds": [
        {
            "name": "Flagship Servers",
            "configurations": [
                "Admin Server",
                "Flags Server",
                "Flags Server Debugger",
                "Admin Server Debugger"
            ]
        }
    ]
}
